<!-- Catalog -->
<section class="catalog">

  <!-- Breadcrumbs -->
  <div class="breadcrumbs">
    <ul>
      <li>
        <a href="/">Home</a>
        <span class="line">/</span>
      </li>
      <li>{{ collection.title }}</li>
    </ul>
  </div>
  <!-- end Breadcrumbs -->

  <h2>{{ collection.title }}</h2>

  {% capture child_list_handle %}{{ collection.title | handle }}{% endcapture %}

  <!-- List catalog -->
  <div class="list list-catalog">
    {% if linklists[child_list_handle] and linklists[child_list_handle].links.size > 0 %}
      <ul>
        {% assign current_tags_size = current_tags | size %}
        <li {% if current_tags_size == 0 %}class="current"{% endif %}><a href="{{ collection.url }}">All</a></li>
        {% for subcollection in linklists[child_list_handle].links %}
          <li {% if current_tags contains subcollection.title %}class="current"{% endif %}>
            <a href="{{ collection.url }}/{{ subcollection.title | handle }}">{{ subcollection.title }}</a>
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </div>
  <!-- end List catalog -->

  <!-- Filters -->
  {% include 'collection-sorting' %}
  <!-- end Filters -->

  {% paginate collection.products by 100 %}
    <!-- Items catalog -->
    <div class="items-catalog">
      <ul>
        {% for product in collection.products offset: paginate.current_offset %}
          <li class="{% if forloop.index == 1 %}size-40{% else %}size-20{% endif %}">
            <div class="inner">
              <a href="{{ product.url }}">
                <img src="{% if forloop.index == 1 %}{{ product.images[0] | img_url: "large" }}{% else %}{{ product.images[0] | img_url: "medium" }}{% endif %}" alt=""/>
              </a>
              <a href="{{ product.url }}" class="title">{{ product.title }}</a>
              <span class="price">{{ product.price | money }}</span>
            </div>
          </li>
        {% endfor %}
      </ul>
    </div>
    <!-- end Items catalog -->

    <!-- Footer catalog -->
    <div class="footer-catalog">
      <div class="little-text">Items {{ paginate.current_offset * 100 + 1  }} to {{ (paginate.current_offset + 1) + 100  }} of {{ collection.products | size }} total</div>

      <button class="btn">Load more</button>

      {% if paginate.pages > 0 %}
        {% include 'pagination-custom' %}
      {% endif %}
    </div>
    <!-- end Footer catalog -->
  {% endpaginate %}

</section>
<!-- end Catalog -->
